{
    "window.commandCenter": 1,
    "workbench.colorTheme": "Solarized Light",
    "diffEditor.ignoreTrimWhitespace": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "editor.formatOnSave": true,
    "notebook.formatOnSave.enabled": true,
    "files.insertFinalNewline": true,
    "files.autoSaveWhenNoErrors": true,
    "rubyLsp.rubyVersionManager": {
        "identifier": "asdf",
        "path": "/opt/homebrew/opt/asdf/libexec/asdf.sh"
    },
    "ruby.useLanguageServer": true,
    "ruby.format": "Shopify.ruby-lsp",
    "ruby.lint": {
        "rubocop": true
    },
    "ruby.rubocop.executePath": "/Users/jd/.asdf/shims/",
    "ruby.rubocop.onSave": true,
    "ruby.interpreter.commandPath": "/Users/jd/.asdf/shims/ruby",
    "ruby.useWorkspaceLibrary": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "redhat.telemetry.enabled": false,
    "dev.containers.defaultFeatures": {},
    "files.autoSave": "afterDelay",
    "rubyLsp.addonSettings": {},
    "rubyLsp.trace.server": "verbose",
    "ruby.debug.console": true,
    "ruby.trace.server": "verbose",
    "dotfiles.repository": "git@github.com:joofsh/coding_setup.git",
    "dotfiles.targetPath": "~/coding_setup",
    "dotfiles.installCommand": "~/coding_setup/install.sh",
    "remote.containers.dotfiles.repository": "git@github.com:joofsh/coding_setup.git", // Add this
    "remote.containers.dotfiles.targetPath": "~/coding_setup", // Add this
    "remote.containers.dotfiles.installCommand": "~/coding_setup/install.sh" // Add this
    "[ruby]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "Shopify.ruby-lsp"
    },
    "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim", // or your nvim path
    "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init_cursor.lua", // if you have one
    "vscode-neovim.neovimClean": true
    "keyboard.dispatch": "keyCode",
    "vscode-neovim.useCtrlKeysForNormalMode": true,
    // Terminal-specific font
    "terminal.integrated.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
    // Optional: Terminal font size and line height
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.letterSpacing": 0.5,
    "terminal.integrated.gpuAcceleration": "auto",
    "terminal.integrated.hardware": true,
    "terminal.integrated.rendererType": "canvas",
    "terminal.integrated.fontLigatures": true,
    "terminal.integrated.minimumContrastRatio": 7,
    "terminal.integrated.fontWeight": 500,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "terminal.integrated.env.osx": {
        "PATH": ""
    },
    "terminal.integrated.inheritEnv": true,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.profiles.osx": {
        "zsh": {
            "path": "/bin/zsh",
            "args": [
                "-l"
            ]
        }
    }
}
